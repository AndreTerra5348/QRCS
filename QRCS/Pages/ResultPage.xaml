<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:QRCS.ViewModels"
             x:DataType="viewModel:ResultViewModel"
             x:Class="QRCS.Pages.ResultPage">

    <Shell.TitleView>
        <HorizontalStackLayout HorizontalOptions="End">
            <Button Text="Open" Command="{Binding OpenResultCommand}"/>
            <Button Text="Copy" Command="{Binding CopyResultCommand}"/>
            <Button Text="Share" Command="{Binding ShareResultCommand}"/>
        </HorizontalStackLayout>
    </Shell.TitleView>
    
    <VerticalStackLayout VerticalOptions="Start" Padding="10">
        <Label 
            Text="{Binding Result}"
            FontSize="Medium"
            />
    </VerticalStackLayout>
</ContentPage>